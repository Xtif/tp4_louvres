{% extends '::layout.html.twig' %}


{% block body %}

<!--Fil d'arianne-->

	<nav aria-label="breadcrumb" role="navigation">
	  <ol class="breadcrumb rounded-0">
	    <li class="breadcrumb-item"><a href="{{ path('info_reservation') }}">Réservation</a></li>
	    <li class="breadcrumb-item active" aria-current="page">Billets</li>
	    <li class="breadcrumb-item fil-arianne-off">Récapitulatif</li>
	    <li class="breadcrumb-item fil-arianne-off">Paiement</li>
	    <li class="breadcrumb-item fil-arianne-off">Validation</li>
	  </ol>
	</nav>




<!--Formulaire-->
<div class="col-8 m-auto">
	<h1 class="mt-3">Réservation de billets - Vos informations</h1>

	<h4>Date de réservation : <span id="date-visite">{{ reservation.jour.jour|date('d/m/Y') }}</span></h4>

	{{ form_start(form) }}

	{# Erreurs générales #}
	{{ form_errors(form) }} 

	{# Champs du formulaire #}
	<div class="form-group">
		{# Génération du label #}
		{{ form_label(form.nom, "Nom") }}
		{# Génération de l'input #}
		{{ form_widget(form.nom, {'attr':{'value': reservation.nomReservation }}) }}
		{# Affichage des erreurs liées au champ #}
		{{ form_errors(form.nom) }}
	</div>

	<div class="form-group">
		{# Génération du label #}
		{{ form_label(form.prenom, "Prénom") }}
		{# Génération de l'input #}
		{{ form_widget(form.prenom, {'attr':{'value': reservation.prenomReservation }}) }}
		{# Affichage des erreurs liées au champ #}
		{{ form_errors(form.prenom) }}
	</div>

	<div class="form-group">
		{# Génération du label #}
		{{ form_label(form.pays, "Pays") }}
		{# Génération de l'input #}
		{{ form_widget(form.pays) }}
		{# Affichage des erreurs liées au champ #}
		{{ form_errors(form.pays) }}
	</div>

	<div class="form-group">
		{# Génération du label #}
		{{ form_label(form.dateNaissance, "Date de naissance") }}
		{# Génération de l'input #}
		{{ form_widget(form.dateNaissance) }}
		{# Affichage des erreurs liées au champ #}
		{{ form_errors(form.dateNaissance) }}
	</div>

	<div class="form-group">
		{# Génération du label #}
		{{ form_label(form.type, "Type de billet") }}
		{# Génération de l'input #}
		{{ form_widget(form.type) }}
		{# Affichage des erreurs liées au champ #}
		{{ form_errors(form.type) }}
		<p id="billet-indisponible" hidden>Le billet journée n'est plus disponible à partir de 14h.</p>
	</div>

	<div class="form-group">
		{# Génération du label #}
		{{ form_label(form.tarifReduit, "Tarif réduit (étudiant, employés du musée, employés du ministère de la culture, militaire)") }}
		{# Génération de l'input #}
		{{ form_widget(form.tarifReduit) }}
		{# Affichage des erreurs liées au champ #}
		{{ form_errors(form.tarifReduit) }}
		<p id="tarif-reduit">Un justificatif vous sera demandé pour accéder au musée.</p>
	</div>

	<div class="form-group">
		{{ form_widget(form.submit, {'attr': {'class': 'bg-info bouton-formulaire'}, 'label': 'Valider'}) }}
	</div>


	


		{{ form_rest(form) }}

	{{ form_end(form) }}

	<a class="float-left btn btn-secondary m-auto" href="{{ path('info_reservation') }}" role="button">Retour à la reservation</a>

</div>



{% endblock %}

